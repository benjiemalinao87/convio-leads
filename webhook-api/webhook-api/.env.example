# Convio Leads Webhook API - Environment Variables
# Copy this file to .env.local for development

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-here-generate-a-strong-random-string

# Environment Configuration
ENVIRONMENT=development
API_VERSION=1.0.0
LOG_LEVEL=debug

# Database Configuration (when D1 is set up)
# DATABASE_NAME=convio-leads
# DATABASE_ID=your-d1-database-id

# KV Storage Configuration (when KV is set up)
# KV_NAMESPACE_ID=your-kv-namespace-id

# Analytics Configuration
# ANALYTICS_DATASET=webhook_events

# External Services (for future integrations)
# CRM_API_URL=https://your-crm.com/api
# CRM_API_KEY=your-crm-api-key

# Notification Services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
# EMAIL_SERVICE_API_KEY=your-email-service-api-key

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Lead Processing Configuration
MAX_LEAD_SIZE_MB=1
ENABLE_SIGNATURE_VALIDATION=true
ENABLE_RATE_LIMITING=true

# Monitoring and Alerting
ENABLE_DETAILED_LOGGING=true
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook